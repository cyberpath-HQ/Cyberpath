---
import Layout from "@layouts/Layout.astro";
import { makeJsonLd } from "src/lib/make-json-ld";
import type { WebPage } from "schema-dts";

const date = new Date();
const json_ld = makeJsonLd<WebPage>({
    "@type":          "WebPage",
    "@context":       "https://schema.org",
    "@id":            "https://cyberpath-hq.com/",
    url:              "https://cyberpath-hq.com/",
    name:             "CyberPath - Cybersecurity Tools & Resources",
    description:      "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
    inLanguage:       "en-US",
    author:           "CyberPath <support@cyberpath-hq.com>",
    image:            {
        "@type":     "ImageObject",
        url:         "https://cyberpath-hq.com/CyberPath-og.webp",
        width:       "1920",
        height:      "933",
        description: "CyberPath - Cybersecurity Tools & Resources",
    },
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id":   "https://cyberpath-hq.com/",
    },
    datePublished:    `${ date.getFullYear() }-${ date.getMonth() + 1 }-${ date.getDate() }`,
    dateModified:     `${ date.getFullYear() }-${ date.getMonth() + 1 }-${ date.getDate() }`,
    publisher:        {
        "@type": "Person",
        name:    "CyberPath",
        email:   "support@cyberpath-hq.com",
    }
});

const projects = [
    {
        name: "CertDb",
        description: "A public database of cybersecurity certifications featuring descriptions, career paths, and more. Search by acronym, provider, title, or career path to find the information you need to advance your career.",
        github: "https://github.com/cyberpath-HQ/CertDb",
        website: "https://certdb.cyberpath-hq.com/",
        logo: "https://raw.githubusercontent.com/cyberpath-HQ/CertDb/master/src/assets/logo.svg",
        tags: ["Database", "Certifications", "Career", "Open Source"],
        color: "from-blue-500/20 to-cyan-500/20",
        borderColor: "border-blue-500/30",
        hoverBorder: "hover:border-blue-500/60",
        delay: "delay-300"
    },
    {
        name: "Orbis",
        description: "A plugin-driven desktop application platform built with Rust and React. Define UIs with JSON schemas, sandbox plugins with WASM, and deploy anywhere. Features 35+ components and secure plugin isolation.",
        github: "https://github.com/cyberpath-HQ/orbis",
        website: "https://orbis.cyberpath-hq.com/",
        logo: "https://raw.githubusercontent.com/cyberpath-HQ/orbis/main/docs/public/logo.svg",
        tags: ["Desktop App", "Plugins", "WASM", "Open Source"],
        color: "from-purple-500/20 to-pink-500/20",
        borderColor: "border-purple-500/30",
        hoverBorder: "hover:border-purple-500/60",
        delay: "delay-400"
    }
];
---

<Layout JSON_LD={ json_ld }
        seo={ {
            title:              "CyberPath - Cybersecurity Tools & Resources",
            canonical:          "https://cyberpath-hq.com/",
            description:        "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
            openGraph:          {
                url:       "https://cyberpath-hq.com/",
                title:     "CyberPath - Cybersecurity Tools & Resources",
                description: "Discover CyberPath's suite of free, open-source cybersecurity tools. Explore our certification database, AI-powered security assistant, and contribute to the community.",
                site_name: "CyberPath",
                images:    [
                    {
                        url:   "https://cyberpath-hq.com/CyberPath-og.webp",
                        width: 1920,
                        height: 933,
                        alt:   "CyberPath - Cybersecurity Tools & Resources",
                    },
                ],
            },
            additionalMetaTags: [
                {
                    name: "keywords",
                    content: "cybersecurity, open source, certifications, AI assistant, security tools, CertDb, Orbis",
                },
            ],
            twitter: {
                cardType: "summary_large_image",
                handle: "@cyberpath_hq",
                site: "@cyberpath_hq"
            }
        } }
>
    <style>
        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes gradientShift {
            0%, 100% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
        }

        @keyframes pulse-subtle {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.8;
            }
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }

        .animate-gradient {
            background-size: 200% 200%;
            animation: gradientShift 8s ease infinite;
        }

        .delay-100 {
            animation-delay: 0.1s;
        }

        .delay-200 {
            animation-delay: 0.2s;
        }

        .delay-300 {
            animation-delay: 0.3s;
        }

        .delay-400 {
            animation-delay: 0.4s;
        }

        .delay-500 {
            animation-delay: 0.5s;
        }

        .project-card {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .project-card:hover {
            transform: translateY(-8px);
        }

        .project-card:hover .gradient-bg {
            opacity: 1;
        }

        .tag {
            transition: all 0.3s ease;
        }

        .tag:hover {
            transform: scale(1.05);
        }
    </style>

    <!-- Hero Section -->
    <div class="relative isolate overflow-hidden">
        <!-- Animated Background Elements -->
        <div class="absolute inset-0 -z-10">
            <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-br from-blue-400/30 to-cyan-400/30 rounded-full blur-3xl animate-float"></div>
            <div class="absolute top-40 right-20 w-96 h-96 bg-gradient-to-br from-purple-400/30 to-pink-400/30 rounded-full blur-3xl animate-float delay-300"></div>
            <div class="absolute bottom-20 left-1/3 w-80 h-80 bg-gradient-to-br from-indigo-400/30 to-blue-400/30 rounded-full blur-3xl animate-float delay-500"></div>
        </div>

        <!-- Hero Content -->
        <div class="mx-auto max-w-7xl px-6 pt-20 pb-12 sm:pt-32 sm:pb-24 lg:px-8">
            <div class="mx-auto max-w-4xl text-center">
                <h1 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-6xl lg:text-7xl mb-6 opacity-0 animate-fade-in-up">
                    Welcome to <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent animate-gradient">CyberPath</span>
                </h1>
                <p class="mt-6 text-lg sm:text-xl leading-7 sm:leading-8 text-neutral-600 max-w-3xl mx-auto opacity-0 animate-fade-in-up delay-200">
                    Your hub for cybersecurity excellence. Explore our suite of tools designed to empower security professionals and enthusiasts worldwide.
                </p>
                <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-x-6 opacity-0 animate-fade-in-up delay-300">
                    <a href="https://github.com/cyberpath-HQ"
                       target="_blank"
                       rel="noopener"
                       class="group rounded-xl bg-neutral-900 px-6 py-3.5 text-sm font-semibold text-white shadow-lg hover:bg-neutral-800 transition-all duration-300 hover:scale-105 hover:shadow-xl"
                    >
                        <span class="flex items-center gap-2">
                            View on GitHub
                            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </span>
                    </a>
                    <a href="#projects"
                       class="text-sm font-semibold leading-6 text-neutral-900 hover:text-neutral-600 transition-colors duration-300 flex items-center gap-1 group"
                    >
                        Explore Projects
                        <svg class="w-4 h-4 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Decorative Divider -->
        <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-neutral-300 to-transparent"></div>
    </div>

    <!-- Projects Section -->
    <div id="projects" class="py-24 sm:py-32 bg-gradient-to-b from-white to-neutral-50">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center mb-16">
                <h2 class="text-base font-semibold leading-7 text-neutral-600 opacity-0 animate-fade-in-up">
                    Our Ecosystem
                </h2>
                <p class="mt-2 text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl opacity-0 animate-fade-in-up delay-100">
                    Open Source Projects
                </p>
                <p class="mt-6 text-lg leading-8 text-neutral-600 opacity-0 animate-fade-in-up delay-200">
                    Discover our collection of tools built by the community, for the community
                </p>
            </div>

            <div class="mx-auto max-w-6xl grid gap-8 md:grid-cols-2">
                {projects.map((project, index) => (
                    <div class={`project-card relative rounded-2xl border-2 ${project.borderColor} ${project.hoverBorder} bg-white p-8 shadow-lg hover:shadow-2xl opacity-0 animate-fade-in-up ${project.delay}`}>
                        <!-- Gradient Background -->
                        <div class={`gradient-bg absolute inset-0 rounded-2xl bg-gradient-to-br ${project.color} opacity-0 transition-opacity duration-500 pointer-events-none`}></div>
                        
                        <!-- Content -->
                        <div class="relative z-10">
                            <!-- Icon & Title -->
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex items-center gap-4">
                                    {
                                        project.logo && (
                                            <div class="h-12 flex items-center justify-center">
                                                <img src={project.logo} alt={`${project.name} logo`} class="w-full h-full object-contain" />
                                            </div>
                                        )
                                    }
                                    {
                                        !project.logo && (
                                            <h3 class="text-2xl font-bold text-neutral-900">
                                                {project.name}
                                            </h3>
                                        )
                                    }
                                </div>
                            </div>

                            <!-- Description -->
                            <p class="text-neutral-600 mb-6 leading-relaxed">
                                {project.description}
                            </p>

                            <!-- Tags -->
                            <div class="flex flex-wrap gap-2 mb-6">
                                {project.tags.map((tag) => (
                                    <span class="tag px-3 py-1 text-xs font-medium text-neutral-700 bg-neutral-100 rounded-full border border-neutral-200">
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            <!-- Links -->
                            <div class="flex gap-4">
                                <a href={project.website}
                                   target="_blank"
                                   rel="noopener"
                                   class="flex-1 group rounded-lg bg-neutral-900 px-4 py-2.5 text-sm font-semibold text-white text-center hover:bg-neutral-800 transition-all duration-300 hover:scale-105 shadow-md hover:shadow-lg"
                                >
                                    <span class="flex items-center justify-center gap-2">
                                        Visit Website
                                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </span>
                                </a>
                                <a href={project.github}
                                   target="_blank"
                                   rel="noopener"
                                   class="group rounded-lg border-2 border-neutral-200 px-4 py-2.5 text-sm font-semibold text-neutral-900 hover:border-neutral-900 transition-all duration-300 hover:scale-105 hover:bg-neutral-50"
                                   title="View on GitHub"
                                >
                                    <svg class="w-5 h-5 group-hover:rotate-12 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Community Section -->
    <div class="relative py-24 sm:py-32 overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 -z-10 bg-gradient-to-b from-neutral-50 to-white"></div>
        <div class="absolute inset-0 -z-10" style="background-image: radial-gradient(circle at 2px 2px, rgb(163 163 163 / 0.15) 1px, transparent 0); background-size: 32px 32px;"></div>

        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl mb-6">
                    Join Our Community
                </h2>
                <p class="text-lg leading-8 text-neutral-600 mb-12">
                    CyberPath is built by security professionals, researchers, and enthusiasts. Contribute, collaborate, and help shape the future of cybersecurity.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="https://github.com/cyberpath-HQ"
                       target="_blank"
                       rel="noopener"
                       class="group inline-flex items-center gap-3 rounded-xl bg-neutral-900 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:bg-neutral-800 transition-all duration-300 hover:scale-105 hover:shadow-xl"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                        </svg>
                        Contribute on GitHub
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>
                    <a href="https://discord.gg/WmPc56hYut"
                       target="_blank"
                       rel="noopener"
                       class="group inline-flex items-center gap-3 rounded-xl bg-[#5865F2] px-6 py-3 text-sm font-semibold text-white shadow-lg hover:bg-[#4752C4] transition-all duration-300 hover:scale-105 hover:shadow-xl"
                    >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"></path>
                        </svg>
                        Join Discord
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Stats -->
            <div class="mx-auto mt-16 max-w-4xl grid grid-cols-1 gap-8 sm:grid-cols-3">
                <div class="text-center p-6 rounded-xl bg-white border border-neutral-200 shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="text-4xl font-bold text-neutral-900 mb-2">Open</div>
                    <div class="text-sm text-neutral-600">Development</div>
                </div>
                <div class="text-center p-6 rounded-xl bg-white border border-neutral-200 shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="text-4xl font-bold text-neutral-900 mb-2">Transparent</div>
                    <div class="text-sm text-neutral-600">Process</div>
                </div>
                <div class="text-center p-6 rounded-xl bg-white border border-neutral-200 shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="text-4xl font-bold text-neutral-900 mb-2">Community</div>
                    <div class="text-sm text-neutral-600">Driven</div>
                </div>
            </div>
        </div>
    </div>
</Layout>
