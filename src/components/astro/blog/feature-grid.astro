---
interface Props {
    columns?: 2 | 3 | 4;
    className?: string;
}
const { columns = 2, className = '' } = Astro.props;

const gridClasses = {
    2: 'md:grid-cols-2',
    3: 'md:grid-cols-3',
    4: 'md:grid-cols-2 lg:grid-cols-4'
};
---

<div class={`grid gap-4 my-6 ${gridClasses[columns]} ${className}`}>
    <slot />
</div>
